# ==============================================================================
# CENTRABIO R&D NEXUS - Environment Configuration
# ==============================================================================
# Copy this file to .env and modify values for your environment

# Server Configuration
CENTRABIO_SERVER_HOST=0.0.0.0
CENTRABIO_SERVER_PORT=8083
CENTRABIO_SERVER_PUBLIC_URL=https://nexus.centrabio.id

# Database Configuration (PostgreSQL)
CENTRABIO_DATABASE_HOST=localhost
CENTRABIO_DATABASE_PORT=5433
CENTRABIO_DATABASE_NAME=centrabio_nexus
CENTRABIO_DATABASE_USER=centrabio
CENTRABIO_DATABASE_PASSWORD=your_secure_password_here
CENTRABIO_DATABASE_MAX_CONNECTIONS=20

# JWT Configuration
CENTRABIO_JWT_SECRET=your_very_long_and_secure_jwt_secret_key_minimum_64_characters_recommended
CENTRABIO_JWT_ACCESS_EXPIRY=3600
CENTRABIO_JWT_REFRESH_EXPIRY=604800

# OpenAI Configuration (for AI-powered analysis)
CENTRABIO_OPENAI_API_KEY=sk-your-openai-api-key-here
CENTRABIO_OPENAI_MODEL=gpt-4-turbo-preview

# Storage Configuration
CENTRABIO_STORAGE_UPLOADS=./storage/uploads
CENTRABIO_STORAGE_REPORTS=./storage/reports
CENTRABIO_STORAGE_PHOTOS=./storage/photos

# Security Configuration
CENTRABIO_SECURITY_RATE_LIMIT_REQUESTS=100
CENTRABIO_SECURITY_RATE_LIMIT_WINDOW=60
CENTRABIO_SECURITY_BCRYPT_COST=12
CENTRABIO_SECURITY_ALLOWED_ORIGINS=https://nexus.centrabio.id,http://localhost:3000

# Logging
RUST_LOG=info,sqlx=warn,actix_web=info
